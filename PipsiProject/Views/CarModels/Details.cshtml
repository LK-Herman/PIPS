@model PipsiProject.Models.CarModel

@{
    ViewData["Title"] = "Details";
}


    <hr />
    <div class="col-lg-12">
        <div class="col-lg-1"></div>
        <div class="col-lg-10" style="background-color:#f5f5f5; box-shadow: rgba(0,0,0,0.4) 4px 4px 4px; ">

            <div class="col-lg-12">
                <div class="col-lg-4">
                    <h2>
                        <span>@Html.DisplayFor(model => model.Marka) @Html.DisplayFor(model => model.Model)</span>
                    </h2>
                </div>
                <div class="col-lg-4">
                    <img class="img-rounded img-responsive" src="@("~/images/carimg/"+ Model.CarImage.ImageName)" asp-append-version="true" style="width:auto; height:auto;" />
                </div>

                <div class="col-lg-3" style="text-align:center; vertical-align: middle;">

                    <div class="img-rounded img-rounded" style="background-color:#f2f2f2; padding:1em 2em;  ">

