                </h4>

                <hr />
                <div class="col-lg-1"></div>
                <div class="col-lg-4">

                    <dl>
                        <dt>
                            @Html.DisplayNameFor(model => model.Klasa)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Klasa)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.PojSilnika)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.PojSilnika)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.Przebieg)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Przebieg)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.RokProd)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.RokProd)
                        </dd>
                    </dl>
                </div>
                <div class="col-lg-4">
                    <dl>

                        <dt>
                            @Html.DisplayNameFor(model => model.Paliwo)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Paliwo)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.Kolor)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Kolor)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.Cena)
