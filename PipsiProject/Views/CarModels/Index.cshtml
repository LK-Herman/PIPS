@model IEnumerable<PipsiProject.Models.CarModel>

@{
    ViewData["Title"] = "Samochody";
}

<h1 class="page-header">Flota samochodów</h1>
<br />


<div class="row">

    <div class="col-sm-3">

    </div><!-- /.col-sm-6 -->



</div><!-- /.row -->

<nav class="navbar container-fluid" padding:0;">

    <a class="btn navbar-btn  navbar-right" style="background-color:white; color:#232323; border: 1px solid #a9a9a9" asp-action="Create">
        <span class="glyphicon glyphicon-plus"></span> 
        <span> Dodaj samochód</span>
    </a>

    

    <div class="dropdown navbar-left form-control  navbar-form form-group">
        <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
            Wybierz Klasę
            <span class="caret"></span>
        </button>
        <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
            <li><a asp-action="Index" asp-route-id="">Wszystkie</a></li>
            <li><hr style="margin: 2px" /></li>
            <li><a asp-action="Index" asp-route-id="1">Ekonomiczna</a></li>
            <li><a asp-action="Index" asp-route-id="2">Sportowa</a></li>
            <li><a asp-action="Index" asp-route-id="3">Luksusowa</a></li>

        </ul>
    </div>
    

    @*<form class="navbar-form navbar-left form-group" type="search" role="search">
        <div class="form-group">
           <input asp-action="Index" type="text" class="form-control" placeholder="Szukaj...">
        </div>
        <button type="submit" value="submit" class="btn btn-default">Szukaj</button>
    </form>*@

</nav>

<br />

<table class="table table-responsive table-striped">
    <thead>

        

    </thead>
    <tbody>
        @foreach (var item in Model)
        {

           //var newDate = item.RokProd.ToShortDateString();
            var newDate = item.RokProd.Year.ToString();
        <tr class="row col-sm-12" style="vertical-align: middle; text-align: left">

            <td class="col-sm-5 img-responsive" style="vertical-align: middle; text-align:center">
                <a asp-action="Details" asp-route-id="@item.Id">

                    <img class="img-rounded img-responsive" src="@("~/images/carimg/"+ item.CarImage.ImageName)" asp-append-version="true" style="max-height:200px"/>
                    @*width="350" height="250"*@
                </a>
            </td>
        
            <td class="col-sm-3" style="vertical-align: middle">
                <p>
                    <h3 class="text-capitalize" style="color:#01791d;">@Html.DisplayFor(modelItem => item.Marka) @Html.DisplayFor(modelItem => item.Model)</h3>
                <p> <label>@Html.DisplayNameFor(modelItem => item.Klasa)</label>:  @Html.DisplayFor(modelItem => item.Klasa) </p>
                <p> <label>@Html.DisplayNameFor(modelItem => item.PojSilnika) </label>:  @Html.DisplayFor(modelItem => item.PojSilnika) </p>
                <p> <label>@Html.DisplayNameFor(modelItem => item.Przebieg) </label>:  @Html.DisplayFor(modelItem => item.Przebieg) </p>
                <p> <label>@Html.DisplayNameFor(modelItem => item.RokProd)</label>:  @newDate</p>
            </td>

            <td class="col-sm-3" style="text-align:center; vertical-align: middle">
                <div class="img-rounded">
                    <p style="font-size: 40px; color:orange; font-family:'Century Gothic'">@Html.DisplayFor(modelItem => item.Cena) </p>
                    <p style="color: dimgray; font-size:16px ">PLN za dzień</p>
                    <p class="img-rounded" style="background-color:#f2f2f2; padding:1em 2em; font-size: 12px ">
                        @Html.DisplayFor(modelItem => item.Opis)
                    </p>
                </div>

            </td>


            <td class="col-sm-1" style="vertical-align:middle">
                <ul class="media-list btn-group-vertical">
                    <li><a class="btn  btn-block " style="margin:10px 0px; background-color:#3e3e3e; color:white " asp-action="Edit" asp-route-id="@item.Id">Edytuj</a></li>
                    <li><a class="btn  btn-block " style="margin:10px 0px; background-color:#3e3e3e; color:white " asp-action="Details" asp-route-id="@item.Id">Szczegóły</a></li>
                    <li><a class="btn  btn-block " style="margin:10px 0px; background-color:orange; color:white " asp-action="Delete" asp-route-id="@item.Id">Usuń</a></li>
                </ul>
            </td>

        </tr>

        }
    </tbody>
</table>
